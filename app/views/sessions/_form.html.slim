.modal-dialog role="document" 
  .modal-content
    = form_with model: @session, url: session_path do |f|
      .modal-header
        h5.modal-title Sign In Form
        button.close aria-label="Close" data-dismiss="modal" type="button" 
          span aria-hidden="true"  Ã—
      .modal-body
        = render 'shared/form_error', model: @session

        .form-group
          = f.label :username
          = f.email_field :username, class: "form-control", required: true
        
        .form-group
          = f.label :password
          = f.password_field :password, class: "form-control"

      .modal-footer
        button.btn.btn-secondary data-dismiss="modal" type="button"  Close
        = f.submit "Sign In", class: "btn btn-primary"